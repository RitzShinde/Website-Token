---
interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<header class="text-center py-12 bg-gradient-to-r from-pink-500 via-red-500 to-purple-500">
  <h1 class="text-4xl font-bold text-white mb-4">{title}</h1>
  <p class="text-xl text-white">{subtitle}</p>
</header>

<style>
  header {
    position: relative;
    overflow: hidden;
  }
  
  header::before {
    content: '❤️';
    position: absolute;
    font-size: 2rem;
    animation: float 6s ease-in-out infinite;
    opacity: 0.5;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }
</style>